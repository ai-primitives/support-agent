{
  "name": "support-agent",
  "version": "1.0.0",
  "description": "A Chat/Email/Slack Support Bot on Cloudflare Workers, Workers AI, Vectorize, and Workflows",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' vitest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' vitest watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' vitest run --coverage",
    "deploy": "wrangler deploy",
    "build": "mkdir -p dist && esbuild src/worker.ts --bundle --format=esm --outfile=dist/worker.js --platform=browser --target=es2020 --external:base64-js --external:mustache",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "cloudflare-workers",
    "support-bot",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@cloudflare/ai": "^1.2.2",
    "@cloudflare/d1": "^1.4.1",
    "@hono/zod-validator": "^0.4.2",
    "ai": "^4.0.18",
    "base64-js": "^1.5.1",
    "hono": "^4.6.14",
    "mustache": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.2.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@miniflare/cache": "^2.14.4",
    "@miniflare/core": "^2.14.4",
    "@miniflare/d1": "^2.14.4",
    "@miniflare/durable-objects": "^2.14.4",
    "@miniflare/kv": "^2.14.4",
    "@miniflare/queues": "^2.14.4",
    "@miniflare/runner-vm": "^2.14.4",
    "@miniflare/shared": "^2.14.4",
    "@miniflare/shared-test-environment": "^2.14.4",
    "@miniflare/storage-memory": "^2.14.4",
    "@miniflare/web-sockets": "^2.14.4",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^3.95.0"
  }
}
